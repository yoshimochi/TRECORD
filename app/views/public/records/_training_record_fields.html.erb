<div class="nested-fields menus">
  <%= f.hidden_field :id %>
  <div class=" btn btn-light dropdown p-0 mb-1">
    <%= f.collection_select :name, Event.all, :name, :name, prompt: "種目名を選択", class: 'form-control '%>
  </div>
  
  <%= link_to_remove_association '削除', f, class: 'btn btn-outline-secondary btn-sm p-0' %>
  <%= link_to_add_association 'セット追加', f, :set_events,
    class: 'btn btn-success p-0',
    data: {
      data_association_insertion_traversal: 'closest',
      association_insertion_method: 'append' }
    %>


  <div>
    <%= f.fields_for :set_events do |set_event| %>
      <%= render 'set_event_fields', f: set_event %>
    <% end %>
  </div>
</div>