<div class="container users-title">
  <div class="row">
   <div class="col-12">
     <h1 class="page-title collapse2">Event</h1>
   </div>
  </div>
  <div class="row">
   <div class="col-12">
     <p class="page-title-translate collapse3">種目登録</p>
   </div>
  </div>

  <div class="error--message">
  <% if @event.errors.any? %>
    <%= @event.errors.count %>件のエラーが発生しました
    <% @event.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  </div>

  <div class="mt-10">
  <%= form_with model: @event, local:true do |f| %>
    <div class="record__new">
      <div class="form-group">
        <%= f.label 'カテゴリー', class: "ccontrol-label" %><br />
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '-- 選択して下さい --', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label '種目名', class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="text-center">
       <%= f.submit '登録する', class: "btn btn-success w-50" %>
    </div>
    <% end %>
  </div>
</div>