<div class="post container">
  <div class="card card__post" style="width: 50rem;">
    <div class="card-body">
      <div class="card-title">
        <table>
          <tr>
            <td>
               <%= attachment_image_tag @post.user, :profile_image, format: "jpeg", size: "60x60", fallback: "no_image.jpg", class: "img-circle" %>
            </td>
            <td></td>
            <td>
              <%= @post.user.name %><br />
              <%= @post.post_comments.count %> コメント
              <% if @post.favorited_by?(current_user) %>
                <%= link_to post_favorites_path(@post), method: :delete do %>
                  ♥<%= @post.favorites.count %> いいね
                <% end %>
              <% else %>
                <%= link_to post_favorites_path(@post), method: :post do %>
                  ♡<%= @post.favorites.count %> いいね
                <% end %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="card-body">
        <p class="card-text"><%= @post.body %></p>
        <%= attachment_image_tag @post, :image, format: 'jpeg', size: "200x180", class: "bd-placeholder-img card-img-bottom " %>
      </div>
    </div>
  </div>

  <div class="post-comment">
    <% @post.post_comments.each do |post_comment| %>
    <table class="table table-hover ">
      <tr>
        <th>
          <img src="<%= post_comment.user.profile_image %>" >, <%= post_comment.user.name %>
        </th>
        <th class="text-center"><%= post_comment.comment %></th>
        <th class="text-right">
          <% if post_comment.user == current_user %>
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
          <% end %>
        </th>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="form-group">
    <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
      <%= f.text_area :comment, class: "form-control" %>
      <div class="btn mb-mt-10">
        <%= f.submit '送信する', class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
