<div class="container users-title">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title collapse2 animate__animated animate__bounceInDown">New Post</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate collapse3 animate__animated animate__backInRight">新規投稿</p>
    </div>
  </div>
</div>

<%= form_with model: @post, local:true do |f| %>
<div class="card__post card">
  <div class="card-body">
    <div class="card-title mb-5">
      <%= f.attachment_field :image, class: "form-control-file" %>
    </div>
    <div class="card-subtitle mb-5">
       <%= f.label '投稿内容' %>
        <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="mt-3">
        <%= f.submit '投稿する', class: "btn btn-lg btn-primary btn-block " %>
    </div>
  </div>
  <% end %>







