<%= flash[:error] %>

<div class="user--signin">

  <%= form_with model: @user, url: user_session_path, class: "form-signin", local:true do |f| %>
  <img class="mb-4" src="/assets/trecord.jpg" alt="" width="150" height="150">
    <h1 class="h3 mb-3 font-weight-normal text-center">Please Sign In</h1>
      <%= f.label 'メールアドレス', class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email address", autocomplete: "email", class: "form-control" %>
      <%= f.label 'パスワード', class: "sr-only" %><br />
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
    <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3 mt-3 text-left">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>

    <div class="form-group mt-3 text-left">
      <%= link_to '新規会員登録', new_user_registration_path %>
      <%= link_to "Twitterでログイン", user_twitter_omniauth_authorize_path, method: :post %>
    </div>
    <p class="mt-5 mb-3 text-muted ">&copy; 2021- </p>
  <% end %>
</div>
