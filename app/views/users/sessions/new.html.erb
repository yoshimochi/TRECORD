<%= flash[:error] %>
<div class="text-center mb-4">
  <h2 class="h3 mb-3 font-weight-normal">会員の方はこちらからログイン</h2>
</div>

<%= form_with model: @user, url: user_session_path, class: "form-signin", local:true do |f| %>
  <div class="form-group">
    <%= f.label 'メールアドレス', class: "exampleFormControlInput1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'パスワード', class: "exampleFormControlInput1" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group">
    <%= render "users/shared/links" %>
  </div>
<% end %>

