<%= flash[:error] %>

<div class="user--signin">
  <%= form_with scope: resource, url: registration_path(resource_name), class: "form-signin", local: true do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <img class="mb-4" src="/assets/trecord.jpg" alt="" width="150" height="150">
      <h1 class="h3 mb-3 font-weight-normal text-center">新規会員登録</h1>

    <div class="form-label-group text-left mt-3">
      <%= f.label 'ユーザー名', class: "inputName" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-label-group text-left mt-3">
      <%= f.label 'メールアドレス', class: "inputEmail" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-label-group text-left mt-3">
      <%= f.label 'パスワード', class: "inputPsaaword" %>
      <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)<% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-label-group text-left mt-3">
      <%= f.label 'パスワード(確認用)', class: "inputPsaaword" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-block mt-3" %>
    </div>

    <div class="form-group mt-3 text-left">
      <%= link_to '会員の方はこちら', new_user_session_path %>
    </div>
  <% end %>
</div>


