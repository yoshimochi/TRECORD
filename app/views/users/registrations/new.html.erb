<div class="text-center mb-4">
  <h2>新規会員登録</h2>
</div>


<%= form_with scope: resource, url: registration_path(resource_name), class: "form-signin", local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-label-group">
    <%= f.label 'ユーザー名', class: "inputName" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-label-group">
    <%= f.label 'メールアドレス', class: "inputEmail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-label-group">
    <%= f.label 'パスワード', class: "inputPsaaword" %>
    <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)<% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-label-group">
    <%= f.label 'パスワード(確認用)', class: "inputPsaaword" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <div class="form-group">
    <%= render "users/shared/links" %>
  </div>
<% end %>