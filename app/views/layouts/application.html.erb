<!DOCTYPE html>
<html>
  <head>
    <title>Trecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://kit.fontawesome.com/ac321328b9.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'script.js' %>

  </head>

  <body>

        <%= yield %>


    <footer class="footer font-sans">
      <div class= "flex justify-between items-center">
      <% if user_signed_in? %>
        <ul class="text-sm text-gray-700 list-none p-0 flex items-center">
          <li> <a href="/" class="block mr-4 w-32">
              <img src="/images/trecord.jpg" class="" alt="logo">
            </a></li>
          <li>
            <%= link_to  users_path , id: "UsersIcon", class: "inline-block py-2 px-3 text-gray-500 hover:text-gray-400 no-underline" do %>
              <i class="fas fa-users"></i>
            <% end %>
          </li>
          <li>
            <%= link_to  users_path , id: "UsersIcon", class: "inline-block py-2 px-3 text-gray-500 hover:text-gray-400 no-underline" do %>
              <i class="fas fa-users"></i>
            <% end %>
          </li>
          <li>
            <% if current_page?(current_user) && current_page?(controller: 'users', action: 'show') %>
              <%= link_to  "/users/edit" , class: "Header__User inline-block py-2 px-3 text-gray-500 hover:text-gray-400 no-underline" do %>
                <div class="Header__User"><i class="fas fa-user-edit"></i></div>
              <% end %>
            <% end %>
          </li>
          <li>
             <%= link_to records_path, id: "EventsIcon" do %>
                <i class="fas fa-burn"></i>
              <% end %>
          </li>
          <li>
            <%= link_to  destroy_user_session_path, id: "SignOutIcon",  method: :delete, class: "inline-block py-2 px-3 text-gray-500 hover:text-gray-400 no-underline" do %>
              <i class="fas fa-sign-out-alt"></i>
            <% end %>
          </li>
        </ul>
      <% end %>
        <p class="text-xs"> Â©2021 TRECODE. All rights reserved.</p>
      </div>
    </footer>

    <footer class="footer">

        <a id="HomeIcon" href="/">
          <i class="fas fa-home"></i>
</a>
        <a id="UsersIcon" href="/users">
          <i class="fas fa-users"></i>
</a>

        <a id="SignOutIcon" rel="nofollow" data-method="delete" href="/users/sign_out">
          <i class="fas fa-sign-out-alt"></i>
</a>
      </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </section>
  </body>
</html>
