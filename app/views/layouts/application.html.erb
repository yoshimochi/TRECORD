<!DOCTYPE html>
<html>
  <head>
    <title>Trecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
    <% if user_signed_in? %>
      <li>ようこそ、<%= current_user.name %>!</li>
      <li><%= link_to 'マイページ', mypage_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to '投稿一覧', posts_path %></li>
      <li><%= link_to 'トレーニング一覧', records_path %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>

    <% elsif admin_signed_in? %>
      <li><%= link_to '会員一覧', admin_users_path %></li>
      <li><%= link_to '投稿一覧', admin_root_path %></li>
      <li><%= link_to '種目一覧', admin_events_path %></li>
      <li><%= link_to 'タグ一覧', admin_tags_path %></li>
      <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>

    <% else %>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to '投稿一覧', posts_path %></li>
      <li><%= link_to '新規会員登録', new_user_registration_path %></li>
      <li><%= link_to 'ログイン', new_user_session_path %></li>
    <% end %>
    </ul>

    <%= yield %>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
