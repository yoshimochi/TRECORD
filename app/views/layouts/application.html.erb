<!DOCTYPE html>
<html>
  <head>
    <title>Trecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://kit.fontawesome.com/ac321328b9.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'script.js' %>


  </head>

  <body>
    <div class="main">
      <%= yield %>
    </div>

  <% if user_signed_in? %>
    <footer class="footer">
        <%= link_to  root_path , id: "HomeIcon"  do %>
          <i class="fas fa-home"></i>
        <% end %>
        <%= link_to  users_path , id: "UsersIcon"  do %>
          <i class="fas fa-users"></i>
        <% end %>
        <%= link_to records_path, id: "EventsIcon" do %>
          <i class="fas fa-burn"></i>
        <% end %>
        <%= link_to  destroy_user_session_path, id: "SignOutIcon",  method: :delete  do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %>
      </footer>
    <% end %>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </section>
  </body>
</html>
