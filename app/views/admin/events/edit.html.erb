<h4>種目編集ページ</h4>

<%= form_with model: [:admin, @event], local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="edit-user col-md-6">
      <div class="form-group">
        <%= f.label 'カテゴリー' %><br />
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '-- 選択して下さい --', class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label '種目名' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mt-">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
        <%= link_to '削除する', admin_event_path(@event), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
<% end %>
