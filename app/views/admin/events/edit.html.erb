<div class="container users-title">
   <div class="row">
     <div class="col-12">
       <h1 class="page-title collapse2">Event Edit</h1>
     </div>
   </div>
   <div class="row">
     <div class="col-12">
       <p class="page-title-translate collapse3">種目編集</p>
     </div>
   </div>
 </div>

<div class="container mt-10">
<%= form_with model: [:admin, @event], local:true do |f| %>
  <div class="record__new">
    <div class="form-group">
      <%= f.label 'カテゴリー', class: "ccontrol-label" %><br />
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '-- 選択して下さい --', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label '種目名', class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
    <div>
       <%= f.submit '編集する', class: "btn btn-success" %>
       <%= link_to '削除する', admin_event_path(@event), method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>