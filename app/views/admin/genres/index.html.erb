<div class="container users-title">
   <div class="row">
     <div class="col-12">
       <h1 class="page-title collapse2">Genres</h1>
     </div>
   </div>
   <div class="row">
     <div class="col-12">
       <p class="page-title-translate collapse3">ジャンル一覧・追加</p>
     </div>
   </div>
 </div>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
 <div class="genre__new">
      <div class="mb-3"></div>
      <div class="field mb-4">
        <%= f.label "ジャンル名", class: "font-weight-bold" %>
        <%= f.text_field :name, class: "mx-5" %></h4>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <div>
      </div>
  </div>
<% end %>

  <div class="genre--item">
    <div>
      <table class="table table-inverse table-hover">
        <thead class="thead-light border-dark">
          <tr>
            <th colspan="9">ジャンル</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <th colspan="5"><%= genre.name %></th>
            <th colspan="3"><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
