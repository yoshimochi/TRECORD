<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <%= f.label 'ジャンル名' %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <td></td>
    </tr>
  </thead>
  <tdoby>
  <% @genres.each do |genre| %>
    <tr>
      <th><%= genre.name %></th>
      <th><%= link_to '編集', edit_admin_genre_path(genre.id) %></th>
    </tr>
  <% end %>
  </tdoby>
</table>