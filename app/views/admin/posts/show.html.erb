<div>
  <div>
    <p><%= attachment_image_tag @user, :profile_image, fallback: "no_image.png", size: "100x100" %> <%= @post.user.name %> </p>
  </div>
  <div>
    <p><%= @post.body %></p>
    <p><%= attachment_image_tag @post, :image, size: "200x200" %></p>
  </div>
  <div>
    <p>♡<%= @post.favorites.count %>いいね　　<%= @post.post_comments.count %>コメント</p>
  </div>
</div>

<div>
  <table>
  <% @post.post_comments.each do |post_comment| %>
    <tr>
      <th><%= post_comment.user.name %></th>
      <td><%= post_comment.comment %></td>
      <td><%= link_to '削除', admin_post_post_comment_path(post_comment.post,post_comment), method: :delete %></td>
    </tr>
  <% end %>
  </table>
</div>