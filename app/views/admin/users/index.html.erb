<h4>会員一覧ページ</h4>

<table class="table table-hover col-md-6 admin-users">
  <thead>
    <tr>
      <th scope="col">会員ID</th>
      <th scope="col">ユーザー名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td scope="row"><%= user.id %></td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td>
      <% if user.is_active == false %>
        <p class="text-success">有効</p>
      <% elsif user.is_active == true %>
        <p class="text-danger">退会</p>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>