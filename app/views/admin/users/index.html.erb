<div class="container users-title">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title collapse2 animate__animated animate__bounceInDown">Users</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate collapse3 animate__animated animate__backInRight">会員一覧</p>
    </div>
  </div>
</div>

<div class="admin--users">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">ユーザー名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.id %></td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
        <% if user.is_active == false %>
          <p class="text-success">有効</p>
        <% elsif user.is_active == true %>
          <p class="text-danger">退会</p>
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= paginate @users %></div>
</div>
