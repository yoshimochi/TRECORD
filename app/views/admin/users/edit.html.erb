<%= form_with model: [:admin, @user], local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="edit-user col-md-6">
      <div class="form-group">
        <%= f.label 'プロフィール画像', class: "exampleFormControlFile1" %><br />
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.png",size: "60x60" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label 'ユーザー名' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label 'メールアドレス' %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label '自己紹介' %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label 'ステータス' %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, :false, class: "form-check-input" %>
          <%= f.label :is_active, "有効", value: :false, class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, :true, class: "form-check-input" %>
          <%= f.label :is_active, "退会", value: :true, class: "form-check-label" %>
        </div>
      </div>
        <%= f.submit '変更を保存', class: "btn btn-success mb-2" %>
    </div>
  </div>
</div>
<% end %>
