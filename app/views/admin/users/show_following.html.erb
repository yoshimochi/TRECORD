<div class="container users-title">
   <div class="row">
     <div class="col-12">
       <h1 class="page-title collapse2">Followings</h1>
     </div>
   </div>
   <div class="row">
     <div class="col-12">
       <p class="page-title-translate collapse3">フォロー</p>
     </div>
   </div>
 </div>

<div class="user__follow my-3 p-3 bg-white rounded shadow-sm">
  <div class="media text-muted pt-3">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",width: "48", height: "48", class: "mr-2 rounded" %>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark">
            <%= link_to "/#{user.name}" do %>
              <%= user.name %>
            <% end %>
          </strong>
        </div>
        <span class="d-block">
          <%= link_to admin_user_path(user) do %>
            <%= user.posts.count %> Post
          <% end %>
          <%= link_to admin_user_follower_path(user) do %>
            <%= user.followers.count %> Follower
          <% end %>
          <%= link_to admin_user_following_path(user) do %>
            <%= user.following.count %> Following
          <% end %>
        </span>
        <span class="d-block">
          <%= user.introduction %>
        </span>
      </div>
    <% end %>
  <% end %>
  </div>