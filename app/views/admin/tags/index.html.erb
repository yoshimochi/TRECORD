<div class="container">
  <div class="row">
    <div class="col-md-10 px-md-0 mx-auto">
      <div class="offset-2">
        <h4 class="font-weight-bold mt-5">タグ一覧・追加</h4>
      </div>
    </div>
  </div>

<%= form_with model: @tag, url: admin_tags_path, local:true do |f| %>
 <div class="row">
      <div class="mb-3"></div>
      <div class="field mb-4">
        <%= f.label "タグ名", class: "font-weight-bold" %>
        <%= f.text_field :name, class: "mx-5" %></h4>
      </div>
      <div>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
  </div>
<% end %>

  <div class="row ml-5 pl-4">
    <div>

      <table class="table table-inverse table-hover">
        <thead class="thead-light border-dark">
          <tr>
            <th colspan="9">タグ</th>
          </tr>
        </thead>
        <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <th colspan="5"><%= tag.name %></th>
            <th colspan="3"><%= link_to '編集', edit_admin_tag_path(tag.id), class: "btn btn-success" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
