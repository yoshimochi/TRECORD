<div class="container users-title">
 <div class="row">
   <div class="col-12">
     <h1 class="page-title collapse2">Tags</h1>
   </div>
 </div>
 <div class="row">
   <div class="col-12">
     <p class="page-title-translate collapse3">タグ一覧・追加</p>
   </div>
 </div>
 </div>

<%= form_with model: @tag, url: admin_tags_path, local:true do |f| %>
 <div class="genre__new">
    <div class="mb-3"></div>
    <div class="field mb-4">
      <%= f.label "タグ名", class: "font-weight-bold" %>
      <%= f.text_field :name, class: "mx-5" %></h4>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

  <div class="genre--item">
    <table class="table table-inverse table-hover">
      <thead class="thead-light border-dark">
        <tr>
          <th colspan="9">タグ</th>
        </tr>
      </thead>
      <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <th colspan="5"><%= tag.name %></th>
          <th colspan="3"><%= link_to '編集', edit_admin_tag_path(tag.id), class: "btn btn-success" %></th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
