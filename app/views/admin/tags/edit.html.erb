<div class="container users-title">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title collapse2">Edit Tag</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="page-title-translate collapse3">タグ編集</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5">
      <h4 class="offset-1 mb-5 font-weight-bold"></h4>
      <div class="col-md-10 px-md-10 me-auto">
        <%= form_with model: [:admin, @tag], local:true do |f| %>
        <div class="field">
          <%= f.label 'タグ名', class: "font-weight-bold" %>
          <%= f.text_field :name, class: "mx-5" %>
          <%= f.submit '変更する', class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
